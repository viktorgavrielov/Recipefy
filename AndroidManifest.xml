<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipefy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cutlery"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.recipefy.IngredientInput"
            android:label="Recipefy" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.recipefy.RecipeActivity"
            android:label="Recipe Suggestions" >
        </activity>
        <activity
            android:name="com.recipefy.SelectActivity"
            android:label="Your Recipe Selection" >
        </activity>
        <activity
            android:name="com.recipefy.CookActivity"
            android:label="Preparation Steps" >
        </activity>
    </application>

</manifest>
